<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@color/primary"
    android:padding="@dimen/md">
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_home_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/result_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        />
    <ImageView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/result_image"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/circle"
        android:src="@drawable/baseline_share_24"
        style="@style/imageBorderRadius"
        android:layout_marginVertical="@dimen/md"
        app:layout_constraintEnd_toStartOf="@+id/facebook"
        android:padding="10dp"
        />
    <ImageView
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/result_image"
        app:layout_constraintStart_toEndOf="@+id/share"
        app:layout_constraintEnd_toStartOf="@+id/whatsapp"
        android:background="@drawable/circle"
        android:src="@drawable/facebook"
        style="@style/imageBorderRadius"
        android:layout_marginVertical="@dimen/md"
        />
    <ImageView
        android:id="@+id/whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/result_image"
        app:layout_constraintStart_toEndOf="@+id/facebook"
        app:layout_constraintEnd_toStartOf="@id/instagram"
        android:background="@drawable/circle"
        android:src="@drawable/whatsapp"
        style="@style/imageBorderRadius"
        android:layout_marginVertical="@dimen/md"
        />
    <ImageView
        android:id="@+id/instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/result_image"
        app:layout_constraintStart_toEndOf="@+id/whatsapp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle"
        android:src="@drawable/instagram"
        style="@style/imageBorderRadius"
        android:layout_marginVertical="@dimen/md"
        />
</androidx.constraintlayout.widget.ConstraintLayout>